{
    "plugins": [
        "@babel/plugin-transform-typescript",
        [
            "module-resolver",
            {
                "root": ["./"],
                "alias": {
                    "@mantine/core": "@mantine/core",
                    "@mantine/hooks": "@mantine/hooks" 
                }
            }
        ]
    ],
    "sourceType": "unambiguous",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": 100,
            "safari": 15,
            "firefox": 91
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ]
}